<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TraveLink" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/red_light</item>
        <item name="colorPrimaryVariant">@color/red</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue_light</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


        <item name="android:windowBackground">@color/night_background</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorProfileImage">@color/white</item>

        <!-- Font family for all app -->
        <item name="android:fontFamily">@font/roboto_black</item>

        <!-- Colors Bottom Navigation View -->
        <item name="color_bnv_background">@color/night_color_bnv</item>
        <item name="color_bnv_checked">@color/night_color_bnv_checked</item>
        <item name="color_bnv_not_checked">@color/night_color_bnv_not_checked</item>

        <!-- Color background list -->
        <item name="colorBackgroundList">@color/list_background_night</item>

        <!-- Color separator -->
        <item name="colorSeparator">@color/white</item>

        <!-- Color EditText disabled -->
        <item name="colorEditTextDisabled">@color/edit_text_disabled_night</item>

    </style>
</resources>